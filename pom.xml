<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>gatling-parent</artifactId>
		<groupId>com.excilys.ebi.gatling</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>gatling-recorder</artifactId>
	<name>${project.artifactId}</name>
	<description>Gatling HTTP functionnalities</description>

	<dependencies>
		<dependency>
			<groupId>org.jboss.netty</groupId>
			<artifactId>netty</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.velocity</groupId>
			<artifactId>velocity</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thoughtworks.xstream</groupId>
			<artifactId>xstream</artifactId>
		</dependency>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		<dependency>
			<groupId>org.codehaus.plexus</groupId>
			<artifactId>plexus-utils</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass>com.excilys.ebi.gatling.recorder.ui.GatlingHttpProxyUI</mainClass>
								</transformer>
							</transformers>
							<artifactSet>
								<excludes>
									<exclude>com.google.code.findbugs:jsr305</exclude>
									<exclude>javax*:*</exclude>
								</excludes>
							</artifactSet>
							<filters>
								<filter>
									<artifact>org.codehaus.plexus:plexus-utils</artifact>
									<includes>
										<include>org/codehaus/plexus/util/SelectorUtils.class</include>
										<include>org/codehaus/plexus/util/Base64.class</include>
									</includes>
								</filter>
								<filter>
									<artifact>commons-collections:commons-collections</artifact>
									<includes>
										<include>org/apache/commons/collections/map/**</include>
										<include>org/apache/commons/collections/**</include>
									</includes>
									<excludes>
										<exclude>org/apache/commons/collections/bag/**</exclude>
										<exclude>org/apache/commons/collections/bidimap/**</exclude>
										<exclude>org/apache/commons/collections/buffer/**</exclude>
										<exclude>org/apache/commons/collections/collection/**</exclude>
										<exclude>org/apache/commons/collections/comparators/**</exclude>
										<exclude>org/apache/commons/collections/functors/**</exclude>
										<exclude>org/apache/commons/collections/iterators/**</exclude>
										<exclude>org/apache/commons/collections/keyvalue/**</exclude>
										<exclude>org/apache/commons/collections/list/**</exclude>
										<exclude>org/apache/commons/collections/set/**</exclude>
									</excludes>
								</filter>
								<filter>
									<artifact>commons-io:commons-io</artifact>
									<includes>
										<include>org/apache/commons/io/IOUtils.class</include>
										<include>org/apache/commons/io/output/ByteArrayOutputStream.class</include>
										<include>org/apache/commons/io/output/StringBuilderWriter.class</include>
									</includes>
								</filter>
								<filter>
									<artifact>commons-lang:commons-lang</artifact>
									<includes>
										<include>org/apache/commons/lang/ArrayUtils.class</include>
										<include>org/apache/commons/lang/StringUtils.class</include>
										<include>org/apache/commons/lang/Validate.class</include>
										<include>org/apache/commons/lang/exception/**</include>
										<include>org/apache/commons/lang/text/**</include>
										<include>org/apache/commons/lang/time/**</include>
									</includes>
								</filter>
								<filter>
									<artifact>com.google.guava:guava</artifact>
									<includes>
										<include>com/google/common/base/**</include>
										<include>com/google/common/cache/**</include>
										<include>com/google/common/collect/**</include>
										<include>com/google/common/eventbus/**</include>
										<include>com/google/common/util/**</include>
									</includes>
								</filter>
								<filter>
									<artifact>com.thoughtworks.xstream:xstream</artifact>
									<excludes>
										<exclude>com/thoughtworks/xstream/converters/javabean/**</exclude>
										<exclude>com/thoughtworks/xstream/io/binary/**</exclude>
										<exclude>com/thoughtworks/xstream/io/json/**</exclude>
										<exclude>com/thoughtworks/xstream/persistence/**</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
